<html>
    <head>
        <title>University Registrar</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
        <link rel="stylesheet" type="text/css" href="/../main.css">
    </head>
    <body>
        <div class="container">
            <h2>Courses</h2>
            {% if courses is not empty %}
                <p>Here are all your courses:</p>
                <ul class="list-group">
                    {% for course in courses %}
                        <li class="list-group-item"><a href="/courses/{{ course.getId }}">{{ course.getCourseName }}</a></li>
                    {% endfor %}
                </ul>
                {% endif %}

            <div class="submit-form">
                <form action='/courses' method='post'>
                    <label for='course_name'>Course Name</label>
                    <input id='course_name' name='course_name' type='text'>

                    <label for='crn'>CRN</label>
                    <input id='crn' name='crn' type='text'>

                    <button class="btn btn-default" type='submit'>Add Course</button>
                </form>

                <form action='/delete_courses' method='post'>
                    <button class="btn btn-default" type='submit'>Clear</button>
                </form>
            </div>
            <p><a href='/'>Home</a></p>
        </div>
    </body>
</html>
