<html>
    <head>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
        <link rel="stylesheet" type="text/css" href="/../main.css">
        <title>University Registrar</title>
    </head>
    <body>
        <div class="container">
            <h2>Students</h2>
            {% if students is not empty %}
                <p>Here are all your Students:</p>
                <ul class="list-group">
                    {% for student in students %}
                        <li class="list-group-item"><a href="/students/{{ student.getId }}">{{ student.getStudentName }}</a> - {{ student.getEnrollDate }}</li>
                    {% endfor %}
                </ul>
            {% endif %}
            <div class="form-group">
                <form action='/students' method='post'>
                    <label for='student_name'>Student Name</label>
                    <input id='student_name' name='student_name' type='text'>
                    <label for='enroll_date'>Enrollment Date</label>
                    <input id='enroll_date' name='enroll_date' type='date'>

                    <button class="btn btn-default" type='submit'>Add Student</button>
                </form>
            </div>

            <div class="form-group">
                <form action='/delete_students' method='post'>
                    <button class="btn btn-default" type='submit'>Clear</button>
                </form>
            </div>

                <p><a href='/'>Home</a></p>
        </div>
    </body>
</html>
